{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",   // Agrega esto
    "paths": {
      "@/*": ["./*"]      // Agrega esto para que todo el proyecto pueda usar '@' como prefijo
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
